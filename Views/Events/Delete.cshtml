@model Assignment1.Models.Event
@{
ViewData["Title"] = "Confirm Delete";
}

<h3 class="mb-3 text-danger">Delete Event</h3>
<div class="alert alert-warning">
    Are you sure you want to delete the event:
    <strong>@Model.Title</strong> ( @Model.Date.ToLocalTime().ToString("yyyy-MM-dd hh:mm tt") ) ?
</div>

<dl class="row">
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@(@Model.Price?.ToString("0.00") ?? "-")</dd>

    <dt class="col-sm-2">Available</dt>
    <dd class="col-sm-10">@Model.AvailableTickets</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
