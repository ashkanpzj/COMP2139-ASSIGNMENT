@model Assignment1.Controllers.GuestController.GuestLoginVm
@{
    ViewData["Title"] = "Continue as Guest";
}

<div class="auth-container">
    <div class="auth-card auth-card-compact">
        <div class="auth-form-section">
            <div class="auth-form-content">
                <div class="auth-header">
                    <div class="auth-icon guest-icon">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h1>Continue as Guest</h1>
                    <p>Enter your email to access your purchase history and upcoming events. No password required!</p>
                </div>

                <form asp-action="Login" method="post" class="auth-form">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-envelope"></i> Email Address
                        </label>
                        <input type="email" asp-for="Email" class="form-control" 
                               placeholder="your@email.com" required autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-person"></i> Your Name <span class="optional-label">(optional)</span>
                        </label>
                        <input type="text" asp-for="Name" class="form-control" 
                               placeholder="How should we call you?" />
                        <small class="form-hint">We'll remember your name for a personalized experience</small>
                    </div>

                    <button type="submit" class="btn btn-primary btn-submit">
                        <span class="btn-text">Continue as Guest</span>
                        <i class="bi bi-arrow-right"></i>
                    </button>
                </form>

                <div class="auth-divider">
                    <span>or</span>
                </div>

                <div class="auth-alt-actions">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-alt">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-alt">
                        <i class="bi bi-person-plus me-2"></i>Create Account
                    </a>
                </div>

                <div class="security-notice">
                    <i class="bi bi-shield-check"></i>
                    <span>Your information is secure and won't be shared</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
    }

    .auth-card {
        display: flex;
        width: 100%;
        max-width: 440px;
        background: white;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
    }

    .auth-card-compact {
        min-height: auto;
    }

    .auth-form-section {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2.5rem;
    }

    .auth-form-content {
        width: 100%;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .auth-icon.guest-icon {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .auth-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .auth-header h1 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: #64748b;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .auth-form .form-group {
        margin-bottom: 1.25rem;
    }

    .auth-form .form-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
    }

    .auth-form .form-label i {
        color: #10b981;
    }

    .optional-label {
        font-weight: 400;
        color: #9ca3af;
    }

    .auth-form .form-control {
        height: 48px;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        padding: 0 1rem;
        font-size: 0.95rem;
        transition: all 0.2s;
    }

    .auth-form .form-control:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
    }

    .auth-form .form-control::placeholder {
        color: #9ca3af;
    }

    .form-hint {
        display: block;
        font-size: 0.8rem;
        color: #9ca3af;
        margin-top: 0.375rem;
    }

    .btn-submit {
        width: 100%;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 0.75rem;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: none;
        transition: all 0.2s;
        margin-top: 0.5rem;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .auth-divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }

    .auth-divider::before,
    .auth-divider::after {
        content: '';
        flex: 1;
        height: 1px;
        background: #e5e7eb;
    }

    .auth-divider span {
        padding: 0 1rem;
        color: #9ca3af;
        font-size: 0.875rem;
    }

    .auth-alt-actions {
        display: flex;
        gap: 0.75rem;
    }

    .btn-alt {
        flex: 1;
        height: 44px;
        border-radius: 0.75rem;
        font-weight: 500;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .security-notice {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #f1f5f9;
        color: #64748b;
        font-size: 0.85rem;
    }

    .security-notice i {
        color: #10b981;
    }

    .text-danger {
        font-size: 0.8rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
