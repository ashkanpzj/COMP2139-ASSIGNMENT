@page
@{
    ViewData["Title"] = "Reset link sent";
}

<div class="text-center my-5">
    <h1 class="mb-3">@ViewData["Title"]</h1>
    <p class="lead">If an account exists for the email provided, a password reset link has been sent.</p>
    <p>Please check your inbox and follow the instructions to finish resetting your password.</p>
    <a class="btn btn-primary mt-3" asp-page="./Login">Back to login</a>
</div>

