@page
@model Assignment1.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirm your email";
}

<div class="text-center my-5">
    <h1 class="mb-3">@ViewData["Title"]</h1>
    <p class="lead">We sent a confirmation link to <strong>@Model.Email</strong>.</p>
    <p>Please check your inbox (and spam folder) to finish setting up your account.</p>

    @if (Model.DisplayConfirmAccountLink)
    {
        <div class="alert alert-warning mt-4">
            <p class="mb-1 fw-semibold">Development shortcut</p>
            <p>You can confirm immediately by <a href="@Model.EmailConfirmationUrl">clicking this link</a>.</p>
        </div>
    }

    <a class="btn btn-primary mt-4" asp-page="./Login">Back to login</a>
</div>



